<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/bootstrap_brand_primary"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:padding="16dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:bootstrapText="알람"
            app:bootstrapBrand="secondary"
            app:materialIcon="md_exit_to_app"
            tools:ignore="RtlCompat" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="top"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@color/cardview_light_background"
            app:bootstrapBrand="regular"
            app:bootstrapText="{md_exit_to_app}\n방송을 종료 하시겠습니까?"
            app:materialIcon="md_exit_to_app" />
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/broadcastEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:bootstrapText="{fa_sign_in} 나가기" />
    </LinearLayout>

</android.support.v7.widget.CardView>
