<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_userinfo"
    android:orientation="horizontal">

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/userInfoThumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dialog_5"
        app:bootstrapBrand="primary"
        app:hasBorder="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userInfoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="123"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userInfoEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="123"
            android:textColor="#616161"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userInfoPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="보유 마일리지 : "
                android:textColor="#616161"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/userInfoPointLoadingLayout"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:id="@+id/userInfoPointLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:bootstrapBrand="primary"
                    app:bootstrapText="{md_sync}" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
