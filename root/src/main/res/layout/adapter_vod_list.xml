<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/VODAdapRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/VODLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/VODImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter" />



            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/VODAdapUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                app:bootstrapBrand="regular"
                app:bootstrapText="{md_room} >"
                app:materialIcon="md_room"
                tools:ignore="RtlCompat,RtlSymmetry" />


            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/VODAdapDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="viewStart"
                android:paddingStart="16dp"
                android:paddingBottom="8dp"
                app:fontAwesomeIcon="fa_times"
                android:textSize="14sp"
                app:bootstrapBrand="regular"
                app:bootstrapText="{md_room} >123123"
                app:materialIcon="md_room"
                tools:ignore="RtlCompat,RtlSymmetry" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/VODAdapTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="viewEnd"
                app:typicon="ty_arrow_right_outline"
                android:textSize="12sp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                app:bootstrapBrand="info"
                app:bootstrapText="{md_room} >4125415125"
                app:materialIcon="md_room"
                tools:ignore="RtlCompat,RtlSymmetry" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>