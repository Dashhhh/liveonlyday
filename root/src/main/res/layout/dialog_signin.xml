<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/signinImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dialog_3" />

            <ImageView
                android:id="@+id/dialogKakaoBillingSuccessImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/gradient_dialog" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/dialogBroadcastText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dialogKakaoBillingSuccessText"
                android:layout_alignParentStart="true"
                android:gravity="top"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:textStyle="bold"
                app:bootstrapBrand="secondary"
                app:bootstrapText="로그인"
                tools:ignore="RtlCompat,RtlSymmetry" />


            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/dialogKakaoBillingSuccessText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"
                android:gravity="top"
                android:paddingStart="16dp"
                android:textAlignment="textStart"
                android:textSize="14sp"
                app:bootstrapBrand="secondary"
                app:bootstrapText="로그인 후 서비스를 이용해 주세요"
                app:materialIcon="md_exit_to_app"
                tools:ignore="RtlCompat,RtlSymmetry" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="8dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/loginId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="아이디"
                    android:textColorHint="#b5000000"
                    android:textSize="14sp"
                    tools:ignore="RtlSymmetry" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:textColorHint="#b5000000"
                    android:textSize="14sp"
                    tools:ignore="RtlSymmetry" />


            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/login_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapBrand="primary"
                app:bootstrapSize="lg"
                app:bootstrapText="{fa_sign_in} 로그인" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>