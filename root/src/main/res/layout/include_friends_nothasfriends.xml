<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/notHaveFriendsRootLayout"
    android:orientation="vertical">

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:layout_marginBottom="30dp"
        app:bootstrapBrand="primary"
        app:bootstrapText="{fa_users}" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:textSize="18sp"
        app:bootstrapBrand="primary"
        app:bootstrapText="등록된 친구가 없습니다" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/addingFriendsButtonIntoNotHaveFriendsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapBrand="success"
        app:bootstrapText="지금 친구를 추가해 보세요!"
        app:buttonMode="regular"
        app:fontAwesomeIcon="fa_users"
        app:roundedCorners="true" />

</LinearLayout>
