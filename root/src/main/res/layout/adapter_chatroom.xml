<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatRoomRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/chatRoomAdapCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ca000000"
        app:cardCornerRadius="13dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/chatRoomAdapUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:bootstrapBrand="secondary"
                app:bootstrapText="USER NAME"
                app:materialIcon="md_room" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/chatRoomAdapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:bootstrapBrand="secondary"
                app:bootstrapText=" >  CHAT TEXT"
                app:materialIcon="md_room" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>